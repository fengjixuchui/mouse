#

#blue start 
	BS="-e \033[1;34m"
#color end
	CE="\033[0m"
#red start
	RS="-e \033[31m"
#green start
	GNS="-e \033[32m"
#white start
        WHS="\033[0;97m"
	
printf '\033]2;Mouse Payload Loader\a'

if [[ "$1" = "--check-directory" ]]
then
if [[ -d ~/mouse ]]
then
    sleep 0
    exit
    else
        cd ~
        {
        git clone https://github.com/entynetproject/mouse.git
        } &> /dev/null
        exit
        fi
exit
fi
	
if [[ "$1" = "-c" || "$1" = "-c" ]]
then
if [[ "$2" = "downloads" ]]
then
{
cd ~/mouse
rm -r downloads
mkdir downloads
} &> /dev/null
sleep 1
echo -e ""$BS"[*]"$WHS" Cleaning up..."$CE""
sleep 10
exit

elif [[ "$2" = "payloads" ]]
then
{
cd ~/mouse
rm -r payloads
mkdir payloads
} &> /dev/null
sleep 1
echo -e ""$BS"[*]"$WHS" Cleaning up..."$CE""
sleep 10
exit
fi
fi

if [[ "$1" = "-u" || "$1" = "--update" ]]
then
sleep 1
echo ""$BS"[*] "$WHS"Installing update..."$CE""
{
mkdir ~/.mouse
cp -r ~/mouse/downloads ~/.mouse
cp -r ~/mouse/payloads ~/.mouse
rm -r ~/mouse
rm /bin/mouse
rm /usr/local/bin/mouse
cd ~
git clone https://github.com/entynetproject/mouse.git
cd mouse
chmod +x install.sh
./install.sh
cp -r ~/.mouse/downloads ~/mouse
cp -r ~/.mouse/payloads ~/mouse
rm -r ~/.mouse
} &> /dev/null
echo ""$GNS"[*] "$WHS"Successfully updated..."$CE""
sleep 1
exit
fi

cd ~
if [[ -d ~/mouse ]]
then
{
cd ~/mouse
} &> /dev/null
python mouse.py
else
{
ASESR="$( timeout -s SIGTERM 40 curl -s checkip.dyndns.org | sed -e 's/.*Current IP Address: //' -e 's/<.*$//' )"
} &> /dev/null
if [[ "$ASESR" != "" ]]
then 
cd ~
{
git clone https://github.com/entynetproject/mouse.git
cd ~/mouse
} &> /dev/null
python mouse.py
else
cd ~
sleep 1
exit
fi
fi
