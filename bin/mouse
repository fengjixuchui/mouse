printf '\033]2;Mouse Framework\a'

if [[ -d ~/mouse ]]
then
{
cd ~/mouse
mkdir etc/.disabled
mv core/commands/universal/upload_universal.py etc/.disabled
mv etc/core/commands/universal/upload_universal.py core/commands/universal
cp etc/.disabled/upload_universal.py etc/core/commands/universal
rm -rf etc/.disabled
mkdir etc/.disabled
mv core/commands/local/exec.py etc/.disabled
mv etc/core/commands/local/exec.py core/commands/local
cp etc/.disabled/exec.py etc/core/commands/local
rm -rf etc/.disabled
} &> /dev/null
chmod +x mouse
./mouse
{
if [[ -f ~/mouse/.updated ]]
then
rm ~/mouse/.updated
else
cd ~/mouse
mkdir etc/.disabled
mv core/commands/universal/upload_universal.py etc/.disabled
mv etc/core/commands/universal/upload_universal.py core/commands/universal
cp etc/.disabled/upload_universal.py etc/core/commands/universal
rm -rf etc/.disabled
mkdir etc/.disabled
mv core/commands/local/exec.py etc/.disabled
mv etc/core/commands/local/exec.py core/commands/local
cp etc/.disabled/exec.py etc/core/commands/local
rm -rf etc/.disabled
fi
} &> /dev/null
else
{
ASESR="$( curl -s checkip.dyndns.org | sed -e 's/.*Current IP Address: //' -e 's/<.*$//' )"
} &> /dev/null
if [[ "$ASESR" != "" ]]
then 
cd ~
{
git clone https://github.com/entynetproject/mouse.git
cd $OLDPWD
cd ~/mouse
mkdir etc/.disabled
mv core/commands/universal/upload_universal.py etc/.disabled
mv etc/core/commands/universal/upload_universal.py core/commands/universal
cp etc/.disabled/upload_universal.py etc/core/commands/universal
rm -rf etc/.disabled
mkdir etc/.disabled
mv core/commands/local/exec.py etc/.disabled
mv etc/core/commands/local/exec.py core/commands/local
cp etc/.disabled/exec.py etc/core/commands/local
rm -rf etc/.disabled
} &> /dev/null
chmod +x mouse
./mouse
{
if [[ -f ~/mouse/.updated ]]
then
rm ~/mouse/.updated
else
cd ~/mouse
mkdir etc/.disabled
mv core/commands/universal/upload_universal.py etc/.disabled
mv etc/core/commands/universal/upload_universal.py core/commands/universal
cp etc/.disabled/upload_universal.py etc/core/commands/universal
rm -rf etc/.disabled
mkdir etc/.disabled
mv core/commands/local/exec.py etc/.disabled
mv etc/core/commands/local/exec.py core/commands/local
cp etc/.disabled/exec.py etc/core/commands/local
rm -rf etc/.disabled
fi
} &> /dev/null
else
cd ~
sleep 1
exit
fi
fi
